<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.orionstark.barberros.controllers.fragments.CreatePassFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:text="Confirm your PIN"/>
        <EditText
            android:id="@+id/new_password_field"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="New Password"
            android:maxLines="1"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:padding="6dp"
            android:drawableLeft="@drawable/security"
            android:background="@drawable/border"/>
        <EditText
            android:id="@+id/confirm_pass_field"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:maxLines="1"
            android:inputType="textPassword"
            android:hint="Confirm Password"
            android:textSize="15sp"
            android:padding="6dp"
            android:drawableLeft="@drawable/security"
            android:background="@drawable/border"/>
        <Button
            android:id="@+id/submit_pass_btn"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="#FFF"
            android:text="SUBMIT"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Barberros@2018"
            android:textSize="13sp"
            android:layout_gravity="center"/>
    </LinearLayout>

</FrameLayout>
